<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	bootstrap="Bootstrap.php"
	processIsolation="false"
	verbose="true"
	strict="false"
	syntaxCheck="true"
	colors="true">
	<testsuites>
		<testsuite name="PHPUnit">
			<directory>Suin</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log
			type="coverage-html"
			target="Coverage"
			charset="UTF-8"
			yui="true"
			highlight="false"
			lowUpperBound="35"
			highLowerBound="70" />
		<log type="testdox-html" target="Coverage/testdox.html" />
		<log type="testdox-text" target="Coverage/testdox.txt" />
	</logging>

	<filter>
		<whitelist>
			<directory suffix=".php">../Source</directory>
			<!-- file>/path/to/file</file -->
			<exclude>
				<!-- directory suffix="Interface.php">../Source</directory -->
				<!-- file>../Public/index.php</file -->
			</exclude>
		</whitelist>
		<blacklist>
			<!-- directory suffix=".php" group="PHPUNIT">../Vendor</directory -->
		</blacklist>
	</filter>
</phpunit>
